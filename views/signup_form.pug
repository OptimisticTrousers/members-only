extends layout

block styles
    link(rel="stylesheet", href="/stylesheets/form.css")

block content
    section
        h1 Sign up
        form(class="form")
            div(class="form__group")
                input(id="fullName" name="fullName" class="form__control" required="true" placeholder="fullName")
                label(class="form__label" for="fullName") FULL NAME
            div(class="form__group")
                input(id="email" name="email" class="form__control" required="true" placeholder="you@domain.com")
                label(class="form__label" for="email") EMAIL
            div(class="form__group")
                input(id="email" name="email" class="form__control" required="true" placeholder="password")
                label(class="form__label" for="password") PASSWORD
            button(class="form__button" type="submit") Sign Up
            div(class="form__container")
                span(class="form__already") Already a member?
                a(class="form__link" href="/log-in") Log In