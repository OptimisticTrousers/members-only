extends layout

block styles
    link(rel="stylesheet" href="/stylesheets/form.css")

block content
    section
        h1 Sign up
        form(class="form" method="POST" action="")
            div(class="form__group")
                input(id="firstName" name="firstName" class="form__control" required="true" placeholder="Bob" value=(user && user.firstName))
                label(class="form__label" for="firstName") FIRST NAME
            div(class="form__group")
                input(id="lastName" name="lastName" class="form__control" required="true" placeholder="Jones" value=(user && user.lastName))
                label(class="form__label" for="lastName") LAST NAME
            div(class="form__group")
                input(id="email" name="email" class="form__control" type="email" required="true" placeholder="you@domain.com" value=(user && user.email))
                label(class="form__label" for="email") EMAIL
            div(class="form__group")
                input(id="password" name="password" class="form__control" type="password" required="true" placeholder="password")
                label(class="form__label" for="password") PASSWORD
            fieldset(class="form__avatars" required="true")
                legend CHOOSE YOUR AVATAR
                input(type="radio" name="avatar" id="roblox" value="roblox" required)
                label(class="form__avatar roblox" for="roblox")
                input(type="radio" name="avatar" id="shrek" value="shrek" required)
                label(class="form__avatar shrek" for="shrek")
                input(type="radio" name="avatar" id="peppa" value="peppa" required)
                label(class="form__avatar peppa" for="peppa")
                input(type="radio" name="avatar" id="elmo" value="elmo" required)
                label(class="form__avatar elmo" for="elmo")
                input(type="radio" name="avatar" id="jerry" value="jerry" required)
                label(class="form__avatar jerry" for="jerry")
                input(type="radio" name="avatar" id="optimistic" value="optimistic" required)
                label(class="form__avatar optimistic" for="optimistic")
            if errors 
                ul
                    for error in errors
                        li(class="form__error")!=error.msg
            button(class="form__button" type="submit") Sign Up
            div(class="form__container")
                span(class="form__already") Already a member?
                a(class="form__link" href="/log-in") Log In